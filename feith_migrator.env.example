# Feith Migration Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# FEITH DATABASE (Source)
# ============================================================================
# Connection to legacy Feith system
# Optional: set a full SQLAlchemy URL to use any DB backend (e.g., SQL Server, Postgres).
# When set, this takes precedence over FEITH_DB_HOST/PORT/NAME/USER/PASSWORD.
# Examples:
#   SQL Server (ODBC): mssql+pyodbc://sa:YourStrong!Pass@localhost:1433/feith?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes
#   SQLite: sqlite:///feith_mock.db
FEITH_DB_URL=

FEITH_DB_HOST=feith-db.internal
FEITH_DB_PORT=1521
FEITH_DB_NAME=FEITH_PROD
FEITH_DB_USER=readonly_user
FEITH_DB_PASSWORD=your_password_here

# Optional: Feith schema (leave blank for SQLite demo)
FEITH_DB_SCHEMA=

# Force SQLite mock source (useful for local simulation without Feith/Oracle)
FEITH_FORCE_SQLITE=false

# Safety: default is read-only (recommended)
FEITH_WRITEBACK_ENABLED=false

# ============================================================================
# TARGET DATABASE (Destination)
# ============================================================================
# PostgreSQL, MySQL, or other modern database
TARGET_DB_URL=postgresql://user:password@localhost:5432/target_db

# ============================================================================
# LLM CONFIGURATION (DGX vLLM Server)
# ============================================================================
LLM_API_URL=http://dgx-server.internal:8080/v1/completions
LLM_MODEL=llama-3.1-70b

# ============================================================================
# PROCESSING SETTINGS
# ============================================================================
# Number of records to process in each batch
# Larger batches = faster but more memory
# Recommended: 50-200
BATCH_SIZE=100

# Minimum confidence score to auto-approve (0.0-1.0)
# Records below this go to manual review
# Recommended: 0.7-0.9
CONFIDENCE_THRESHOLD=0.7

# Number of concurrent workers
# Set based on DGX GPU availability
# Recommended: 2-8
MAX_WORKERS=4

# ============================================================================
# OPTIONAL SETTINGS
# ============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum retries for failed records
MAX_RETRIES=3

# Timeout for LLM requests (seconds)
LLM_TIMEOUT=120
