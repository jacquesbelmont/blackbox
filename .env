# Feith Migration Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# FEITH DATABASE (Source)
# ============================================================================
# Connection to legacy Feith system
FEITH_DB_HOST=feith-db.internal
FEITH_DB_PORT=1521
FEITH_DB_NAME=FEITH_PROD
FEITH_DB_USER=readonly_user
FEITH_DB_PASSWORD=your_password_here

# Optional: Feith schema (leave blank for SQLite demo)
FEITH_DB_SCHEMA=

FEITH_FORCE_SQLITE=true

# Safety: default is read-only (recommended)
FEITH_WRITEBACK_ENABLED=false

# ============================================================================
# TARGET DATABASE (Destination)
# ============================================================================
# PostgreSQL, MySQL, or other modern database
TARGET_DB_URL=sqlite:///migration_staging.db

# ============================================================================
# LLM CONFIGURATION (DGX vLLM Server)
# ============================================================================
LLM_API_URL=http://localhost:11434/api/generate
LLM_MODEL=llama3

# ============================================================================
# PROCESSING SETTINGS
# ============================================================================
# Number of records to process in each batch
# Larger batches = faster but more memory
# Recommended: 50-200
BATCH_SIZE=100

# Minimum confidence score to auto-approve (0.0-1.0)
# Records below this go to manual review
# Recommended: 0.7-0.9
CONFIDENCE_THRESHOLD=0.7

# Number of concurrent workers
# Set based on DGX GPU availability
# Recommended: 2-8
MAX_WORKERS=4

# ============================================================================
# OPTIONAL SETTINGS
# ============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Maximum retries for failed records
MAX_RETRIES=3

# Timeout for LLM requests (seconds)
LLM_TIMEOUT=120
